<mvc:View
  controllerName="sap.ui.cod3rsgrowth.controller.Cadastro"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.layout.form"
>
  <Page showNavButton="true" navButtonPress=".aoClicarRetornaPraHome">
    <headerContent>
      <Button
        icon="sap-icon://save"
        ariaHasPopup="Dialog"
        press=".aoClicarSalvarPeca"
        text="{i18n>botaoSalvar}"
      />
      <Button
        icon="sap-icon://decline"
        ariaHasPopup="Dialog"
        press=".aoClicarRetornaPraHome"
        text="{i18n>botaoCancelar}"
      />
    </headerContent>
    <VBox alignItems="Center">
      <f:Form editable="true" id="forms">
      <f:layoutData>
        <FlexItemData minWidth="40%" />
      </f:layoutData>
        <f:title>
          <core:Title icon="sap-icon://add-product" text="Peça" />
        </f:title>
        <f:layout>
          <f:ResponsiveGridLayout
            columnsL="1"
            columnsXL="1"
            emptySpanL="3"
            emptySpanM="3"
            emptySpanXL="3"
            labelSpanL="1"
            labelSpanM="1"
            labelSpanXL="1"
          />
        </f:layout>
        <f:formContainers>
          <f:FormContainer>
            <f:formElements>

              <f:FormElement label="Categoria">
                <f:fields>
                  <Input
                    id="categoria"
                    change=".validarCampo"
                    value="{peca>/categoria}"
                    placeholder="{i18n>campoCategoriaPlaceholder}"
                  />
                </f:fields>
              </f:FormElement>

              <f:FormElement label="Nome">
                <f:fields>
                  <Input
                    id="nome"
                    value="{peca>/nome}"
                    required="true"
                    change=".validarCampo"
                    placeholder="{i18n>campoNomePlaceholder}"
                  />
                </f:fields>
              </f:FormElement>

              <f:FormElement label="Descrição">
                <f:fields>
                  <Input
                    value="{peca>/descricao}"
                    placeholder="{i18n>campoDescricaoPlaceholder}"
                  />
                </f:fields>
              </f:FormElement>

              <f:FormElement label="Estoque">
                <f:fields>
                  <Input
                    id="estoque"
                    type="Number"
                    maxLength="1"
                    value="{peca>/estoque}"
                    change=".validarCampo"
                    required="true"
                    placeholder="{i18n>campoEstoquePlaceholder}"
                  />
                </f:fields>
              </f:FormElement>

              <f:FormElement label="Fabricado em">
                <f:fields>
                  <DatePicker
                    id="dataDeFabricacao"
                    value="{peca>/dataDeFabricacao}"
                    change=".validarCampoData"
                    required="true"
                    displayFormat="dd/MM/yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="{i18n>campoDataPlaceholder}"
                  />
                </f:fields>
              </f:FormElement>
              
            </f:formElements>
          </f:FormContainer>
        </f:formContainers>
      </f:Form>
    </VBox>
  </Page>
</mvc:View>
